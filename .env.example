# Security Bot Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# AI Provider API Keys (only needed if using cloud-based AI providers)
# =============================================================================

# OpenAI API Key (required if using provider: openai)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (required if using provider: anthropic)
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# Ollama Configuration (for local LLM)
# =============================================================================

# Ollama server URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Authentication Tokens (for scanning protected APIs)
# =============================================================================

# JWT Token for API authentication
# JWT_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# API Key for API authentication
# API_KEY=your-api-key-here

# =============================================================================
# Scanner Configuration
# =============================================================================

# ZAP API Key (if ZAP is running with API key authentication)
# ZAP_API_KEY=your-zap-api-key

# ZAP Proxy URL (default: http://localhost:8080)
# ZAP_PROXY_URL=http://localhost:8080

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker host (default: unix:///var/run/docker.sock on Linux/macOS)
# DOCKER_HOST=tcp://localhost:2375

# =============================================================================
# Logging
# =============================================================================

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Disable colored output (set to "true" to disable)
# NO_COLOR=true
